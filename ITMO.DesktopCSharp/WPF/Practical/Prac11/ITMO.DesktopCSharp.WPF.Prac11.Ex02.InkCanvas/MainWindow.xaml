<Window x:Class="ITMO.DesktopCSharp.WPF.Prac11.Ex02.InkCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITMO.DesktopCSharp.WPF.Prac11.Ex02.InkCanvas"
        mc:Ignorable="d"
        Title="Ink Pad" Height="550" Width="370"
        Background="LightGray">
    <Grid>
        <InkCanvas x:Name="inkCanvas" HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Stretch" Width="Auto"
                   Background="LightYellow"/>
        <Button x:Name="clearBtn" Content="Clear" HorizontalAlignment="Left" Height="26" Margin="10,480,0,0" VerticalAlignment="Top" Width="148" Click="clearBtn_Click"/>
        <Button x:Name="closeBtn" Content="Close" HorizontalAlignment="Left" Height="26" Margin="212,480,0,0" VerticalAlignment="Top" Width="148" Click="closeBtn_Click"/>
    </Grid>
</Window>
