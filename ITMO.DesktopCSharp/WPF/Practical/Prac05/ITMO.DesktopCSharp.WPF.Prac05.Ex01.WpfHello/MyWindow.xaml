<Window x:Class="ITMO.DesktopCSharp.WPF.Prac05.Ex01.WpfHello.MyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITMO.DesktopCSharp.WPF.Prac05.Ex01.WpfHello"
        mc:Ignorable="d"
        Title="MyWindow" Height="450" Width="800" Closing="Window_Closing" 
        Background="{StaticResource gradientStyle}" Closed="Window_Closed">
    <Grid>
        <Button x:Name="closeBut" Content="Close" HorizontalAlignment="Left" Margin="27,27,0,0" VerticalAlignment="Top" Click="closeBut_Click"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="113,29,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="80" Width="120"/>

    </Grid>
</Window>
